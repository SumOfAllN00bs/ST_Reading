<Window x:Class="ST_Reading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST_Reading"
        mc:Ignorable="d"
        Title="Self-Training: Reading" Height="360" Width="640" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="Btn_FirstCourse" Content="First Course" Grid.Column="1" Width="100" Height="20" Click="Btn_FirstCourse_Click"/>
        <Button x:Name="Btn_SecondCourse" Content="Second Course" Grid.Column="2" HorizontalAlignment="Center" Height="20" Width="100"/>
        <Button x:Name="Btn_ThirdCourse" Content="Third Course" Grid.Column="3" Height="20" Width="100"/>
    </Grid>
</Window>
